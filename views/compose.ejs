<%- include('partials/header'); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="">Title</label>
        <input class="form-control" type="text" placeholder="Add Title.." name="postTitle">     
    </div>
    <div class="form-group">
        <label for="">Post</label>
        <textarea placeholder="Content..." class="form-control" name="postContent" id="" cols="30" rows="10"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button" value="response">Publish</button>
</form>

